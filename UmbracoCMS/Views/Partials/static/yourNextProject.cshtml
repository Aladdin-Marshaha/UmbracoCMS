@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;
    var officeLocation = settings?.Value<string>("officeLocation") ?? "";
    var officePhoneNumber = settings?.Value<string>("officePhoneNumber") ?? "";
    var officeEmailAddress = settings?.Value<string>("officeEmailAddress") ?? "";

    var yourNextProjectImg = settings?.Value<IPublishedContent>("yourNextProjectImg")?.Url() ?? "";

}
<section class="bg-gray">
    <div class="container yourNextProject ">

            <img src="@yourNextProjectImg" >

        <div class="yourNextProjectText">
            <h2>Let us know about your next project</h2>
            <div>
                <p class="Text-Bold"><i class="fa-light fa-location-dot"></i>Office location</p>
                <p class="address">@officeLocation</p>
            </div>
            <div>
                <p class="Text-Bold"><i class="fa-regular fa-phone-flip"></i>Phone number</p>
                <p class="address">@officePhoneNumber</p>
            </div>
            <div>
                <p class="Text-Bold"><i class="fa-light fa-envelope"></i>E-mail address</p>
                <p class="address">@officeEmailAddress</p>
            </div>
        </div>
    </div>
</section>